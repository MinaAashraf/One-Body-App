<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.questionsanawya.dell.sanawyaapp.MyGroupActivity"
    tools:showIn="@layout/app_bar_my_group">

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="410dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#044a66"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp">
<LinearLayout
    android:layout_width="match_parent" android:background="@drawable/new_gradient"
    android:layout_height="match_parent" android:id="@+id/linear"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#0e1a26">
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/myprofile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="20dp"
                android:src="@drawable/profileimage"
                app:civ_border_color="#044a66"
                app:civ_border_width="4dp" />

            <TextView
                android:id="@+id/my_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/myprofile"
                android:gravity="center"
                android:text="User Name"
                android:textColor="#054761"
                android:textSize="23sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="200dp"
            android:id="@+id/magmo3a"
            android:text="المجـمـوعة:"
            android:textColor="#076e91"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mygroup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginTop="200dp"
            android:textColor="#000"
            android:text="...."
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:text="ترتيب المجموعة:"
            android:layout_marginLeft="160dp"
            android:textColor="#076e91"
            android:textSize="25sp"
            android:id="@+id/trteb"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mywork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginTop="282dp"
            android:textColor="#000"
            android:text="...."
            android:textSize="35sp"
            android:textStyle="bold" />


    </android.support.v7.widget.CardView>


</LinearLayout>
