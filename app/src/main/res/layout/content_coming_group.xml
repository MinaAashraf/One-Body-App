<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.questionsanawya.dell.sanawyaapp.ComingGroupActivity"
    tools:showIn="@layout/app_bar_coming_group">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:id="@+id/abovelinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_gradient2"
                android:orientation="vertical"></LinearLayout>

            <ImageView
                android:id="@+id/edit_image"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="right"
                android:layout_margin="7dp"
                android:alpha="0"
                android:scaleType="centerCrop"
                android:src="@drawable/edit" />


            <Button
                android:id="@+id/coming_group_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/b"
                android:gravity="center"
                android:text=""
                android:textColor="#121f2a"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="80dp"
                android:text="المـوضوع:"
                android:textColor="#121f2a"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/elmaudo3"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/b"
                android:textColor="#121f2a"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#064b68"
            app:cardCornerRadius="5dp"
